@{ 
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div class="container">
    @if (@Model.Error !=null)
    {
        <h1 class="text-danger">@Model.Error</h1>
    }
    else if (!string.IsNullOrWhiteSpace(@Model.Title))
    {
        <p>Search result by title : @Model.Title (@Model.TotalResults)</p>

        <div class="row">
            @*@foreach (Cinema item in @Model.Movies)
