        </div>
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if(Model.CurrentPage>1)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Search"
                               asp-controller="Home"
                               asp-route-page="@(Model.CurrentPage-1)"
                               asp-route-title="@Model.Title">Previous</a>
                        </li>                         
                    }                 
                                        
                    @for (int i = @Model.CurrentPage-@Model.CountViewPage; i <=  @Model.CurrentPage+@Model.CountViewPage; i++)
                    {
                        @if (i>0 && i<=Model.TotalPages)
                        {
                            <li class="page-item @(i==Model.CurrentPage ? "active" : ' ')">
                            <a class="page-link"
                               asp-action="Search"
                               asp-controller="Home"
                               asp-route-page="@i"
                               asp-route-title="@Model.Title">
                                @i
                            </a>
                        </li>
                        }
                        
                    }

                    @if(Model.TotalPages>Model.CurrentPage)
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Search"
                               asp-controller="Home"
                               asp-route-page="@(Model.CurrentPage+1)"
                               asp-route-title="@Model.Title">Next</a>
                        </li>
                    }                    
                </ul>
            </nav>
         </div>
        

        @*<p>@ViewBag.Result</p>*@
    }
    else
    {
        <p>Not results</p>
    }
</div>

